    <style name="Theme.AMCTechnicianNoActionBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/c_5B67CA</item>
        <item name="colorPrimaryVariant">@color/c_2C406E</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="colorControlHighlight">@color/purple_700</item>
        <item name="colorControlActivated">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_200</item>

        <item name="android:editTextStyle">@style/App_EditTextStyle</item>



    </style>


    <style name="Theme.TextInputLayoutGreyStyle" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_700</item>
        <item name="colorAccent">@color/purple_500</item>
        <item name="textInputStyle">@style/TextInputLayoutStyle</item>
    </style>


    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="android:textColorHint">@color/warm_grey_four</item>
        <item name="boxStrokeWidthFocused">2dp</item>
        <item name="boxStrokeColor">@color/text_input_layout_stroke_color</item>
        <item name="hintTextAppearance">@style/FloatingHintTextStyle</item>
        <item name="helperTextTextAppearance">@style/HelperTextAppearance</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:padding">@dimen/spacing_12</item>
        <item name="android:background">@null</item>
        <item name="android:textSize">@dimen/font_16</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/c_black_two</item>
        <item name="hintTextAppearance">@style/FloatingHintTextStyle</item>
        <item name="helperTextTextAppearance">@style/HelperTextAppearance</item>
    </style>

    <style name="FloatingHintTextStyle" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="HelperTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/purple_200</item>
    </style>

    <style name="ErrorTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/c_btn_red_pressed</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold|italic</item>
    </style>


    <style name="App_EditTextStyle" parent="@android:style/Widget.EditText">
<!--        <item name="android:background">@drawable/filled_roundededges_box_dark</item>-->
        <item name="android:textColor">@color/c_black</item>
        <item name="android:layout_height">45dip</item>
    </style>

